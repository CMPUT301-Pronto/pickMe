<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/primary_pink"
    app:cardBackgroundColor="@color/card_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Selected Badge -->
        <TextView
            android:id="@+id/tvSelectedBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event_status_selected"
            android:textSize="12sp"
            android:textColor="@color/text_on_primary"
            android:background="@drawable/badge_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Event Image -->
        <ImageView
            android:id="@+id/ivEventPoster"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_background"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintTop_toBottomOf="@id/tvSelectedBadge"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Event Name -->
        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/ivEventPoster"
            app:layout_constraintStart_toEndOf="@id/ivEventPoster"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Summer Music Festival" />

        <!-- Event Date -->
        <TextView
            android:id="@+id/tvEventDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@android:drawable/ic_menu_my_calendar"
            app:drawableTint="@color/primary_pink"
            app:layout_constraintTop_toBottomOf="@id/tvEventName"
            app:layout_constraintStart_toEndOf="@id/ivEventPoster"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Feb 10, 2026" />

        <!-- Response Deadline -->
        <TextView
            android:id="@+id/tvDeadline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="@color/warning_orange"
            android:textStyle="bold"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@android:drawable/ic_menu_recent_history"
            app:drawableTint="@color/warning_orange"
            app:layout_constraintTop_toBottomOf="@id/tvEventDate"
            app:layout_constraintStart_toEndOf="@id/ivEventPoster"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Respond by: Nov 5, 2025" />

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/divider_color"
            app:layout_constraintTop_toBottomOf="@id/ivEventPoster"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Decline Button -->
            <Button
                android:id="@+id/btnDecline"
                style="@style/Widget.PickMe.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/decline_invitation"
                android:textSize="14sp" />

            <!-- Accept Button -->
            <Button
                android:id="@+id/btnAccept"
                style="@style/Widget.PickMe.Button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/accept_invitation"
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

