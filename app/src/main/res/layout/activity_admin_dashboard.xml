<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background_light">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_pink"
            app:title="@string/admin_dashboard_title"
            app:titleTextColor="@color/text_on_primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Admin Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/primary_pink">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_menu_manage"
                        android:tint="@color/text_on_primary"
                        android:contentDescription="@string/admin_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/admin_panel"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_on_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/admin_subtitle"
                        android:textSize="14sp"
                        android:textColor="@color/text_on_primary"
                        android:alpha="0.9" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Browse Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/browse_section"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp" />

            <!-- Browse Events Button -->
            <Button
                android:id="@+id/btnBrowseEvents"
                style="@style/Widget.PickMe.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/browse_events_admin"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawableTint="@color/text_on_primary"
                android:layout_marginBottom="12dp" />

            <!-- Browse Profiles Button -->
            <Button
                android:id="@+id/btnBrowseProfiles"
                style="@style/Widget.PickMe.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/browse_profiles"
                android:drawableStart="@android:drawable/ic_menu_myplaces"
                android:drawableTint="@color/text_on_primary"
                android:layout_marginBottom="12dp" />

            <!-- Browse Images Button -->
            <Button
                android:id="@+id/btnBrowseImages"
                style="@style/Widget.PickMe.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/browse_images"
                android:drawableStart="@android:drawable/ic_menu_gallery"
                android:drawableTint="@color/text_on_primary"
                android:layout_marginBottom="12dp" />

            <!-- Notification Logs Button -->
            <Button
                android:id="@+id/btnNotificationLogs"
                style="@style/Widget.PickMe.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/notification_logs"
                android:drawableStart="@android:drawable/ic_dialog_email"
                android:drawableTint="@color/text_on_primary"
                android:layout_marginBottom="12dp" />

            <!-- Management Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/management"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp" />

            <!-- Remove Organizer Button -->
            <Button
                android:id="@+id/btnRemoveOrganizer"
                style="@style/Widget.PickMe.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/remove_organizer"
                android:drawableStart="@android:drawable/ic_menu_delete"
                android:drawableTint="@color/primary_pink"
                android:textColor="@color/primary_pink" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

