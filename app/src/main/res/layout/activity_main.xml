<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Header Section with Pink Background -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:background="@color/primary_pink"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- App Title -->
    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="PickMe!"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="@color/text_on_primary"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="@id/headerBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Join. Wait. Get your fair shot."
        android:textSize="16sp"
        android:textColor="@color/text_on_primary"
        android:alpha="0.9"
        app:layout_constraintTop_toBottomOf="@id/tvAppTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Welcome, Entrant!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_on_primary"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- User ID -->
    <TextView
        android:id="@+id/tvUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Device ID: Loading..."
        android:textSize="14sp"
        android:textColor="@color/text_on_primary"
        android:alpha="0.8"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Content Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/contentCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/headerBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Section Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phase 5: Entrant Features"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <!-- Profile Button -->
            <Button
                android:id="@+id/btnProfile"
                style="@style/Widget.PickMe.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="My Profile"
                android:drawableStart="@android:drawable/ic_menu_myplaces"
                android:drawableTint="@color/text_on_primary"
                android:layout_marginBottom="12dp" />

            <!-- Browse Events Button -->
            <Button
                android:id="@+id/btnBrowseEvents"
                style="@style/Widget.PickMe.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Browse Events"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawableTint="@color/text_on_primary"
                android:layout_marginBottom="12dp" />

            <!-- Invitations Button -->
            <Button
                android:id="@+id/btnInvitations"
                style="@style/Widget.PickMe.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="My Invitations"
                android:drawableStart="@android:drawable/ic_dialog_email"
                android:drawableTint="@color/text_on_primary"
                android:layout_marginBottom="12dp" />

            <!-- Event History Button -->
            <Button
                android:id="@+id/btnHistory"
                style="@style/Widget.PickMe.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Event History"
                android:drawableStart="@android:drawable/ic_menu_recent_history"
                android:drawableTint="@color/text_on_primary" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Loading Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/headerBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Info Text -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:text="Tap any button to explore the implemented features. Organizer and Admin features coming in later phases."
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/contentCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>