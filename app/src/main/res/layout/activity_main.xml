<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Header Section with Pink Background -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:background="@color/primary_pink"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- App Title -->
    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="PickMe!"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="@color/text_on_primary"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="@id/headerBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Join. Wait. Get your fair shot."
        android:textSize="16sp"
        android:textColor="@color/text_on_primary"
        android:alpha="0.9"
        app:layout_constraintTop_toBottomOf="@id/tvAppTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Welcome, Entrant!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_on_primary"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- User ID -->
    <TextView
        android:id="@+id/tvUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Device ID: Loading..."
        android:textSize="14sp"
        android:textColor="@color/text_on_primary"
        android:alpha="0.8"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Role Badge -->
    <TextView
        android:id="@+id/tvRoleBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ENTRANT"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="@color/text_on_primary"
        android:background="@drawable/badge_background"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvUserId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

    <!-- Content Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/contentCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/headerBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Entrant Section -->
            <LinearLayout
                android:id="@+id/entrantSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/entrant_features"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Profile Button -->
                <Button
                    android:id="@+id/btnProfile"
                    style="@style/Widget.PickMe.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/my_profile"
                    android:drawableStart="@android:drawable/ic_menu_myplaces"
                    android:drawableTint="@color/text_on_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Browse Events Button -->
                <Button
                    android:id="@+id/btnBrowseEvents"
                    style="@style/Widget.PickMe.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/browse_events"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:drawableTint="@color/text_on_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Invitations Button -->
                <Button
                    android:id="@+id/btnInvitations"
                    style="@style/Widget.PickMe.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/my_invitations"
                    android:drawableStart="@android:drawable/ic_dialog_email"
                    android:drawableTint="@color/text_on_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Event History Button -->
                <Button
                    android:id="@+id/btnHistory"
                    style="@style/Widget.PickMe.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/event_history"
                    android:drawableStart="@android:drawable/ic_menu_recent_history"
                    android:drawableTint="@color/text_on_primary" />

            </LinearLayout>

            <!-- Organizer Section -->
            <LinearLayout
                android:id="@+id/organizerSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="gone">

                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/organizer_features"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Organizer Profile Button -->
                <Button
                    android:id="@+id/btnOrganizerProfile"
                    style="@style/Widget.PickMe.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/my_profile"
                    android:drawableStart="@android:drawable/ic_menu_myplaces"
                    android:drawableTint="@color/text_on_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Create Event Button -->
                <Button
                    android:id="@+id/btnCreateEvent"
                    style="@style/Widget.PickMe.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/create_new_event"
                    android:drawableStart="@android:drawable/ic_menu_add"
                    android:drawableTint="@color/text_on_primary"
                    android:layout_marginBottom="12dp" />

                <!-- My Events Dashboard Button -->
                <Button
                    android:id="@+id/btnMyEvents"
                    style="@style/Widget.PickMe.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/my_events_dashboard"
                    android:drawableStart="@android:drawable/ic_menu_agenda"
                    android:drawableTint="@color/text_on_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Browse Events Button (Organizer) -->
                <Button
                    android:id="@+id/btnOrganizerBrowse"
                    style="@style/Widget.PickMe.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/browse_all_events"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:drawableTint="@color/text_on_primary" />

            </LinearLayout>

            <!-- Admin Section -->
            <LinearLayout
                android:id="@+id/adminSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="gone">

                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_features"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Admin Profile Button -->
                <Button
                    android:id="@+id/btnAdminProfile"
                    style="@style/Widget.PickMe.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/my_profile"
                    android:drawableStart="@android:drawable/ic_menu_myplaces"
                    android:drawableTint="@color/text_on_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Admin Dashboard Button -->
                <Button
                    android:id="@+id/btnAdminDashboard"
                    style="@style/Widget.PickMe.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/admin_dashboard"
                    android:drawableStart="@android:drawable/ic_menu_manage"
                    android:drawableTint="@color/text_on_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Browse Events Button (Admin) -->
                <Button
                    android:id="@+id/btnAdminBrowse"
                    style="@style/Widget.PickMe.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/browse_all_events"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:drawableTint="@color/text_on_primary" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>    <!-- Loading Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/headerBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Info Text -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:text="Tap any button to explore the implemented features."
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/contentCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>