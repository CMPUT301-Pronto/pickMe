<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.PickMe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_pink</item>
        <item name="colorPrimaryVariant">@color/primary_pink_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/primary_pink_light</item>
        <item name="colorSecondaryVariant">@color/primary_pink</item>
        <item name="colorOnSecondary">@color/text_primary</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_pink_dark</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Accent color -->
        <item name="colorAccent">@color/accent_color</item>

        <!-- Button style -->
        <item name="materialButtonStyle">@style/Widget.PickMe.Button</item>
    </style>

    <!-- Primary Button Style -->
    <style name="Widget.PickMe.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="backgroundTint">@color/primary_pink</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Outlined Button Style -->
    <style name="Widget.PickMe.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary_pink</item>
        <item name="strokeColor">@color/primary_pink</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Text Button Style -->
    <style name="Widget.PickMe.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary_pink</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- EditText Style -->
    <style name="Widget.PickMe.EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_pink</item>
        <item name="hintTextColor">@color/text_hint</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <!-- Switch Style -->
    <style name="Widget.PickMe.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/primary_pink</item>
        <item name="trackTint">@color/primary_pink_light</item>
    </style>

    <!-- NoActionBar theme for activities with custom Toolbar -->
    <style name="Theme.PickMe.NoActionBar" parent="Theme.PickMe">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>